@model IEnumerable<OneStopTourist.Models.HomePage>
@{
    ViewBag.Title = "Attractions";
}
<h2>Attractions</h2>
@using (Html.BeginForm())
{
    <p>
        Find by name:@Html.TextBox("SearchString")
        <text> </text>@Html.DropDownList("category", new SelectList(ViewBag.Category))
        <input type="submit" value="Search" />
    </p>
}
<table style="width:100%">
    <tr>
        <th>
           @Html.DisplayNameFor(model => model.getAttraction.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.getAttraction.Category)
        </th>
        <th></th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.getAttraction.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.getAttraction.Category)
            </td>
            <td>
                <a href="@Url.Action("ViewAttraction", new { id = item.getAttraction.Aid })">
                    <img src="@Url.Content("~/Images/more.png")" width="15" />
                </a>
            </td>
            <td>
                <a href="">
                    <img src="@Url.Content("~/Images/plus.png")" width="15" />
                </a>
            </td>
        </tr>
    }
</table>

