
@model IEnumerable<OneStopTourist.Models.HomePage>

@{
    ViewBag.Title = "ViewService";
}
<script language="JavaScript" type="text/javascript" src="../../Scripts/ratings.js"></script>
<div class="row">
    <div class="col-md-8">
        <!--Title and description-->
        <h2>
            @Html.DisplayFor(model => model.First().getService.Name)
        </h2>

        <span id="addressText"></span>
        <!--Contact details?-->
    </div>
    <div class="col-md-4">
        <!--Tiny map-->
        <br /><br />
        <div id="map" style="width:100%;height:320px;"></div>
    </div>
</div>
<br /><br />
<div class="row">
    <!--Reviews-->
    <h3>Reviews</h3>
    <hr />
    <div class="col-md-6">
        @foreach (var item in Model)
        {
            <strong>@Html.DisplayFor(modelItem => item.getReview.Nickname)</strong>
            <br />
            <span id="rateNumber">@Html.DisplayFor(modelItem => item.getReview.Ratings)</span>
            <span class="star-rating">
                <input type="radio" name="ratedisplay" id="1" value="1" onclick="return false;"><i></i>
                <input type="radio" name="ratedisplay" id="2" value="2" onclick="return false;"><i></i>
                <input type="radio" name="ratedisplay" id="3" value="3" onclick="return false;"><i></i>
                <input type="radio" name="ratedisplay" id="4" value="4" onclick="return false;"><i></i>
                <input type="radio" name="ratedisplay" id="5" value="5" onclick="return false;"><i></i>
            </span><br />
            <script>setRatings()</script>
            <span style="font-style:italic;font-size:0.9em;">Posted on @Html.DisplayFor(modelItem => item.getReview.ReviewDate)</span>
            <br /><br />
            @Html.DisplayFor(modelItem => item.getReview.Content)<br /><br />
        }
    </div>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <h4>Submit a Review</h4>
        <div class="col-md-6">
            <div class="form-horizontal">
                @Html.ValidationSummary(true)
                <div class="form-group">
                    @Html.LabelFor(model => model.FirstOrDefault().getReview.Nickname, htmlAttributes: new { @class = "col-md-2" })
                    <div class="col-md-10">
                        <input type="text" name="nickname" />
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FirstOrDefault().getReview.Ratings, htmlAttributes: new { @class = "col-md-2" })
                    <div class="col-md-10">
                        <span class="star-rating">
                            <input type="radio" name="rating" value="1"><i></i>
                            <input type="radio" name="rating" value="2"><i></i>
                            <input type="radio" name="rating" value="3"><i></i>
                            <input type="radio" name="rating" value="4"><i></i>
                            <input type="radio" name="rating" value="5"><i></i>
                        </span>
                        <!--<strong class="choice">Choose a rating</strong>-->
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.FirstOrDefault().getReview.Content, htmlAttributes: new { @class = "col-md-2" })
                    <div class="col-md-10">
                        <textarea rows="4" cols="50" name="content"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Submit" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

</div>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.4/jquery.min.js"></script>
<script language="JavaScript" type="text/javascript" src="../../Scripts/map.js"></script>

<script>
    getItemMap(@Html.Raw(Json.Encode(Model.First().getService.Latitude)), @Html.Raw(Json.Encode(Model.First().getService.Longitude)));

    $('input[name=rating]:radio').change(
    function(){
        $('.choice').text( $(this).val() + ' stars' );
    });
</script>


